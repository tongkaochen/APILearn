<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <com.tifone.ui.customview.RectView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#f0adcc"/>

    <com.tifone.ui.customview.CircleView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#838080"
        app:circle_color="#ffffff"
        />

    <com.tifone.ui.customview.MyLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#fffaaa">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#bbbb00"
            android:text="Btn 1"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#aaaaaa"
            android:text="Btn 2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#a00aaa"
            android:text="Btn 3"/>

    </com.tifone.ui.customview.MyLinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="#aafaaa">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#bbbb00"
            android:text="Btn 1"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#aaaaaa"
            android:text="Btn 2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#a00aaa"
            android:text="Btn 3"/>

    </LinearLayout>

</LinearLayout>